@import "./base.styl"
body
  background-color #e4e4e4
.layout
  .layout-header
    position absolute
    top 0
    left 0
    right 0
    height 60px
    line-height 60px
    background #495060
    .layout-logo
      color #fff
      text-align center
      font-size 18px
    .user, .logout
      color #fff
      font-size 14px
      cursor pointer
  .layout-content
    position: absolute
    top: 60px
    left 0
    right 0
    bottom 0
    overflow hidden
    .container
      background-color #fff
      min-height 100%
      .top
        padding 10px 20px
        display flex
        align-items center
        justify-content space-between
        border-bottom 1px solid #f4f4f4
      .content
        padding 40px 0
        .form
          width 800px
#login
  position relative
  width 100%
  height 100%
  display flex
  justify-content center
  align-items center
  .login-box
    padding 40px
    width 400px
    box-sizing border-box
    border-radius 4px
    background-color #fff





.btn-submit
  width 230px
  height 40px
